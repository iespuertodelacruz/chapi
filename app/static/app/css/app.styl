color1 = #4B8CBD
color2 = #CC0000

@font-face
    font-family: "Open Sans"
    src: url("/static/app/fonts/Open_Sans/OpenSans-Light.ttf")

@font-face
    font-family: "Open Sans Bold"
    src: url("/static/app/fonts/Open_Sans/OpenSans-Semibold.ttf")

@font-face
    font-family: "Open Sans Italic"
    src: url("/static/app/fonts/Open_Sans/OpenSans-LightItalic.ttf")

body
    font-family: "Open Sans"
    font-size: 16px

.navbar
    border-radius: 0
    margin-bottom: 0

.title
    margin-top: 20px

.logo
    margin-top: 20px
    width: 130px
 
.well-saved
    margin-top: 20px

.address
    margin-top: 30px

.header
    margin-bottom: 30px

.thumbnail-panel
    font-size: 30pt
    color: color1

.event-date
    color: color1

.register-section
    margin-top: 30px
    margin-bottom: 50px

.footer
    margin-top: 100px
    border-top: 1px solid #D6D6D6
    padding: 20px

.server-fail
    width: 300px

.assistants
    margin-top: 50px
    font-size: 12pt

.speaker
    margin-top: 20px

.section-title
    font-family: "Open Sans Bold"
    font-size: 26px
    border-bottom: 1px solid color2
    margin-bottom: 40px
    color: color2

.listener-workplaces
    margin-bottom: 30px

.listener-workplace
    height: 100px
    background-image: url("/static/app/img/building.png")
    text-align: center
    vertical-align: middle
    padding: 20px
    margin-top: 20px
    opacity: 0.2

.workplace
    margin-top: 10px
    font-weight: bold
    
.avatar
    -webkit-clip-path: circle(50% at 50% 50%)
    clip-path: circle(50% at 50% 50%)

.tweet-it
    margin-top: 50px

.btn-thanks
    margin-top: 30px

.listener-row
    margin-bottom: 20px

.info-section
    display: block
    border: 5px solid color2
    padding: 10px
    margin-top: 20px
    margin-bottom: 20px
    font-size: 16pt
    font-weight: bold

.notice
    font-family: "Open Sans Italic"
    padding-left: 40px
    border-left: 5px solid #E4E4E4
    margin-top: 20px
    color: color1

.warning
    color: #D60B00

.big-lock
    margin-top: 20px
    font-size: 150px
    color: #CCCCCC
